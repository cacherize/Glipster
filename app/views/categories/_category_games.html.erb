<% if @categories_games.present? %>

  <div class="games_list">
    <% if @group_games %>
      <table class="games_list_table">
        <tbody>
          <% @grouped_games.each do |row| %>
          <tr>
            <% row.each do |game| %>
              <td>
                <div class="game_wrapper">
                  <span>
                    <div class="game_img">
                      <%= link_to game_thumb(game), game %>
                      <%= special_status_image(game) %>
                    </div>
                    <%= link_to game.title, game, class: 'game_link', title: game.title %>
                  </span>
                </div>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <% @categories_games.each do |game| %>
        <div class="game_wrapper">
          <span>
            <div class="game_img">
              <%= link_to game_thumb(game), game %>
              <%= special_status_image(game) %>
            </div>
            <%= link_to game.title, game, class: 'game_link', title: game.title %>
          </span>
        </div>
      <% end %>
    <% end %>
  
    <%= will_paginate @categories_games %><%= tag("br", class: 'clear') if @searched_games.size > 18 %>
  </div>
<% else %>
  <p>No <%= @category.name.downcase %> games found with a title containing "<%= params[:search] %>"</p>
<% end %>