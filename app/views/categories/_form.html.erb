<div class="center">
	<%= form_for @category, html: {class: 'form'} do |f| %>
		<h2 class="form_header"><%= controller.action_name.titleize %> Category</h2>
    <% if @category.errors.any? %>
      <fieldset class="form_errors">
        <legend>Form Errors</legend>
        <ul>
          <% for message in @category.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </fieldset>
    <% end %>
		<div class="form_field">
			<%= f.label :name %><br/>
			<%= f.text_field :name %>
		</div>
		<div class="form_submit">
			<%= f.submit %>
		</div>
	<% end %>
</div>