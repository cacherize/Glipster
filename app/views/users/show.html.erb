<div class="center">
	<div id="user_show">
		<span class="profile_pic">
			<%= avatar_large(@user, 'userImage') %>
      <% if current_user == @user %>
  			<%= link_to(image_tag('image.png')+" Change Avatar", '#', id: 'change_av_link') %>
        <%= link_to(image_tag('lock.png')+" Change Password", edit_password_update_path(@user), id: 'change_pw_link') %>
      <% end %>
		</span>
		<h1 id="user_header">
      <%= @user.username %>
      <%= link_to "<span>Change Username</span> #{image_tag('wand.gif')}".html_safe, "#", id: 'change_un_link' %>
    </h1>
    <div class="user_content">
      <h2 class="user_section_header">Recently Played <%= link_to "<span>Show More</span>".html_safe, '', class: 'ext_list_link' %></h2>
      <% if @recently_played.present? %>
        <%= render partial: '/games/game', collection: @recently_played %>
      <% else %>
        <p class="no_user_content">
          <%= "#{(current_user == @user) ? "You have" : (@user.username+" has")} no recently played games :( " %>
        </p>
      <% end %>
    </div>
    <div class="user_content">
      <h2 class="user_section_header">Likes <%= link_to "<span>Show More</span>".html_safe, '', class: 'ext_list_link' %></h2>
      <% if @likes.present? %>
        <%= render partial: '/games/game', collection: @likes %>
      <% else %>
        <p class="no_user_content">
          <%= "#{(current_user == @user) ? "You have" : (@user.username+" has")} no liked games :( " %>
        </p>
      <% end %>
    </div>
	</div>
</div>
<div id="change_prof_pic" title="Update Avatar">
  <%= form_for @user, html: {multipart: true} do |f| %>
    <%= link_to image_tag('browse_files.png')+" Select File", '#', onclick: 'openFileBrowser()' %><br/>
    <span id="pending_filename"></span><br/>
    <%= f.file_field :image, style: 'display:none;' %>
    <%= avatar_large(@user,'userImgPrev') %>
    <div class="form_submit">
      <%= f.submit "Update Avatar" %>
    </div>
  <% end %>
</div>
<div id="change_username" title="Change Username">
  <%= form_for @user, html: {honeypot: true} do |f| %>
    <div class="form_field">
      <%= f.label :username, "New Username" %><br/>
      <%= f.text_field :username, value: @user.username, autocomplete: 'off' %><br/>
      <span id="username_check">&nbsp;</span>
    </div>
    <div class="form_submit">
      <%= f.submit "Change Username", id: 'un_submit_btn', disabled: true %>
    </div>
  <% end %>
</div>
<%= javascript_include_tag params[:controller] %>