<div class="center" style="width:75%; margin:0 auto; max-width:1230px;">
	<%= render partial: 'slideshow' %>
	<hr class="divider"/>
	<div class="games_container">
		<h3>Featured Games</h3>
		<% if @games.present? %>
			<%= render partial: 'game_list', locals: {games: @games} %>
		<% end %>
	</div>

	<div style="display:inline-block; width:70%;">
		<div style="padding-right:20px;">
			<div class="games_container">
				<h3>New Games</h3>
				<% if @recent_games.present? %>
					<%= render partial: 'game_list', locals: {games: @recent_games} %>
				<% end %>
			</div>
		</div>
	</div><!--
	--><div style="display:inline-block; width:30%;">
		<div class="games_container">
			<h3>Random Game</h3>
			<% if @random_games.present? %>
				<%= render partial: 'game_list', locals: {games: @random_games} %>
			<% end %>
		</div>
	</div>
</div>
<%= javascript_include_tag 'jquery.tinycarousel' %>