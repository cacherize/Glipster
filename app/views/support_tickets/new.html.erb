<div class="center">
  <%= form_for @support_ticket, html: {class: 'form', id: "contact_us_form"} do |f| %>
    <h1 class="form_header">Contact Us</h1>
    <div class="form_container">
      <div class="form_field">
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
      </div>
      <div class="form_field">
        <fieldset id="contact_us_reason">
          <legend>Select a reason:</legend>
          <div class="inline-block">
            <%= f.radio_button :reason, "report bug" %>
            <%= f.label :reason, "Report A Bug", value: 'report bug' %><br/>
            <%= f.radio_button :reason, "general comment" %>
            <%= f.label :reason, "General Comment", value: 'general comment' %><br/>
            <%= f.radio_button :reason, "making a suggestion" %>
            <%= f.label :reason, "Making A Suggestion", value: 'making a suggestion' %><br/>
            <%= f.radio_button :reason, "trouble registering" %>
            <%= f.label :reason, "Trouble Registering", value: 'trouble registering' %>
          </div>
          <div id="contact_reason_right_radius">
            <%= f.radio_button :reason, "cant log in" %>
            <%= f.label :reason, "Can't Log In", value: 'cant log in' %><br/>
            <%= f.radio_button :reason, "other" %>
            <%= f.label :reason, "Other:", value: 'other' %><br/>
            <%= f.text_field :other_reason %>
          </div>
        </fieldset>
      </div>
      <div class="form_field">
        <%= f.label :message %><br/>
        <%= f.text_area :message, value: @support_ticket.message, placeholder: 'Provide some details...' %>
      </div>
      <div class="form_submit">
        <%= f.submit "Send Message" %>
      </div>
    </div>
  <% end %>
</div>
<%= javascript_include_tag params[:controller] %>