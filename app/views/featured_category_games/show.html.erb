<div class="center">
	<h2 class="featured_category_title">Featured <%= @category.name %> Games</h2>
	<% if @featured_games.present? %>
		<% @featured_games.each do |featured_category| %>
			<% game = featured_category.game %>
			<div class="game_wrapper">
				<span>
					<div class="game_img">
						<%= link_to game_thumb(game), game %>
						<%= image_tag("star.png", class: 'featured_icon') if game.featured %>
					</div>
					<%= link_to game, class: 'vertical_game_link', title: game.title do %>
						<h4><%= game.title %></h4>
						<p><%= game.description.present? ? game.description : "<i>No Description</i>".html_safe %></p>
					<% end %>
				</span>
				<%= link_to(image_tag("delete.png"), featured_category_game_url(featured_category), method: :delete, class: 'action') %>
			</div>
		<% end %>
	<% else %>
		<i>No Featured Games</i>
	<% end %><br/>
	<%= form_tag featured_category_game_path(@category), method: :get, class: 'feature_game_search' do %>
		<%= text_field_tag :search, nil, id: 'game_name_search', placeholder: 'Search Category...' %>
		<%= submit_tag '' %>
	<% end %>
	<% @games.each do |g| %>
		<div class="game_wrapper">
			<span>
				<div class="game_img">
					<%= link_to game_thumb(g), g %>
					<%= image_tag("star.png", class: 'featured_icon') if g.featured %>
				</div>
				<%= link_to g, class: 'vertical_game_link', title: g.title do %>
					<h4><%= g.title %></h4>
					<p><%= g.description.present? ? g.description : "<i>No Description</i>".html_safe %></p>
				<% end %>
			</span>
			<% if @featured_games.map(&:game_id).include?(g.id) %>
				<%= link_to(image_tag("delete.png"), featured_category_game_url(g.featured_category_game), method: :delete, class: 'action') %>	
			<% else %>
				<%= link_to(image_tag("add.png"), featured_category_games_path(object: {game_id: g.id, category_id: @category.id}), method: :post, class: 'action') %>
			<% end %>
		</div>
	<% end %>
</div>