<div id="comments">
	<%= form_for @comment, html: {class: 'comment_form'} do |f| %>
		<%= f.hidden_field :game_id, value: @game.id %>
		<div class="form_field">
			<%= f.label :message, "Add Comment:" %><br/>
			<%= f.text_area :message, placeholder: (current_user.nil? ? 'Please log in to comment' : 'Enter comment here...') %>
		</div>
		<div class="form_submit">
			<%= f.submit "Post Comment" %>
		</div>
	<% end %>
	<hr id="comment_divider" />
</div>