<div class="comment">
  <div class="comment_header">
    <%= link_to avatar_thumb(comment.user), comment.user, class: 'comment_user_link' %>
    <span class="comment_username"><%= link_to comment.user.username, comment.user %></span>
    <span class="comment_details">
      Likes | <%= comment.created_at.localtime.strftime("%b %e, %Y %l:%M %p %Z") %>
    </span>
    <% if current_user == comment.user %>
      <div class="comment_delete">
        <%= link_to image_tag("delete.png"), comment, method: :delete, title: 'delete', confirm: 'Are you sure?' %>
      </div>
    <% end %>
  </div>
  <p class="comment_message collapsed text-left">
    <%= h(comment.message).gsub(/\n/, '<br/>').html_safe %>
    <a class="read_more">... Read More</a>
  </p>
</div>