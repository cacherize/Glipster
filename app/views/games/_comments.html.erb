<div id="comments">
	<% if current_user.present? %>
		<%= form_for @comment, html: {class: 'comment_form'} do |f| %>
			<%= f.hidden_field :game_id, value: @game.id %>
			<div class="form_field">
				<%= f.label :message, "Add Comment:" %><br/>
				<%= f.text_area :message, placeholder: 'Enter comment here...' %>
			</div>
			<div class="form_submit">
				<%= f.submit "Post Comment" %>
			</div>
		<% end %>
	<% else %>
		<h3 style="font-size:1.1em;">Add Comment:</h3>
		<p><%= link_to "Please log in to post comments.", login_path %></p>
	<% end %>
	<hr id="comment_divider" />
	<% if @comments.present? %>
		<% @comments.each do |comment| %>
			<div class="comment">
				<%= avatar_thumb(comment.user) %>
				<%= comment.message %>
				<div class="comment_details"><%= comment.created_at.localtime.strftime("%b %e, %Y %l:%M %p %Z") %></div>
			</div>
		<% end %>
	<% else %>
		<p><i>No Comments</i></p>
	<% end %>
</div>