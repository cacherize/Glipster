<!DOCTYPE html>
<html>
<head>
  <title>Glipster</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png?v=4' %>
</head>
<body>

<div id="wrapper">
	<div id="header">
		<div id="logo_container">
			<div id="logo_rounded_corner_left"></div><div id="logo_wrapper"><%= link_to image_tag('logo.png'), root_path %></div><div id="logo_rounded_corner_right"></div>
		</div>
		<ul id="menu">
			<li><%= link_to "Featured", root_path, class: cp(root_path) %></li>
	    <li><%= link_to "Most Played", class: cp(users_path) %></li>
	    <li><%= link_to "Highest Rated", class: cp(users_path) %></li>
	    <li class="submenu_container">
	    	<%= link_to "Categories <span class='sub_arrow'>&#x25bc;</span>".html_safe, class: cp(users_path) %>
	    	<ul class="submenu">
	    		<li style="border-top:0;"></li>
	    		<% Category.all.each do |cat| %>
	    			<li><%= link_to cat.name, cat %></li>
	    		<% end %>
	    	</ul>
	    </li>
		</ul>
		<div id="sessions_links">
			<% if current_user.present? %>
				<%= link_to avatar_thumb(current_user) + " #{current_user.username}", user_path(current_user), class: cp(current_user) %> <%= link_to "Logout", logout_path, method: :delete %>
			<% else %>
				<%= link_to "Login", login_path, class: cp(login_path) %>
			<% end %>
		</div>
	</div>
	<div id="body">
		<% if flash[:alert] %>
    	<p class="flash alert"><%= flash[:alert] %></p>
	  <% end %>
	  <% if flash[:notice] %>
	    <p class="flash notice"><%= flash[:notice] %></p>
	  <% end %>
		<%= yield %>
	</div>

	<div id="footer">
		<div id="footer_border"></div>
		<div id="footer_content"></div>
	</div>
</div>

</body>
</html>
