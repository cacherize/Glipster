<div class="center">
	<div id="game_show">
		<div id="game_header">
			<%= game_thumb(@game) %>
			<h1><%= @game.title %> 
				<% if @developer.present? %>
					<span>
						By: <%= link_to_if(@developer.link.present?, @developer.name, @developer.link, target: '_blank') %>
					</span>
				<% end %>
			</h1>
		</div>
		<div id="game_body">
			<%= content_tag :embed, "", src: @game.flash_file.url, width: @game.width, height: @game.height %>
		</div>
	</div>
	<div id="game_stats">
		<span><b>Page Visits:</b> <%= @game.plays %></span>
		<span class="reputation">
			<%= link_to image_tag('thumbs_up.png'), vote_game_path(value: '1'), method: :post, class: "up_link #{highlight_vote(@game, 1)}" %>
			<div class="reputation_bar">
				<% if @rep_percents.present? %>
					<p class="percentage"><%= @rep_percents.first.round %>%</p>
					<span class="right_bar" style="width:<%= number_to_percentage(@rep_percents.first) %>;"></span><span class="left_bar" style="width:<%= number_to_percentage(@rep_percents.last) %>;"></span>
				<% else %>
					<span class="full_bar">No Votes</span>
				<% end %>
			</div>
			<%= link_to image_tag('thumbs_down.png'), vote_game_path(value: '-1'), method: :post, class: "down_link #{highlight_vote(@game, -1)}" %>
		</span>
	</div>
</div>
<script type="text/javascript">
$(document).ready(function(){
	var width = $("#game_show").width();
	$("#game_stats").width(width);
});
</script>