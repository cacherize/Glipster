<%= form_tag sessions_path do %>
	Username: <%= text_field_tag :username %><br/>
	Password: <%= password_field_tag :password %><br/>
	<%= link_to "Forgot Password?", new_password_reset_path %><br/>
	<%= check_box_tag :remember_me, 1, params[:remember_me] %><%= label_tag :remember_me %><br/>

	<%= submit_tag 'Login' %>
<% end %>