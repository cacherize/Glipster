<div class="center">
  <div id="sign_up_message">
    <p>Don't have an account? Sign up <%= link_to 'here', signup_path %>.</p>
    <%= link_to "Sign Up", signup_path, id: 'signup_link' %><br class="clear"/>
  </div>
	<%= form_tag sessions_path, class: "form", honeypot: true do %>
		<h2 class="form_header">Sign In</h2>
		<div class="form_field">
			<%= label_tag :login, "Username/Email:" %><br/><%= text_field_tag :login %>
		</div>
		<div class="form_field">
			<%= label_tag :password, "Password:" %><br/><%= password_field_tag :password %>
		</div>
		
		<%= check_box_tag :remember_me, 1, params[:remember_me] %> <%= label_tag :remember_me %><br/>
		<p style="font-size:0.8em; margin:5px 0;">Forgot your password?<br/>Reset it <%= link_to "here", reset_password_path %>.</p>

		<div class="form_submit">
			<%= submit_tag 'Login' %>
		</div>
	<% end %>

  <div class="wrapper" id="cookies_disabled">
    <h3>Your browser's cookies are disabled &#9785;</h3>
    <p>
      Please enable them to log in.<br/>
      <br/>
      Need help? Choose your browser for instructions:
    </p>
    <ul id="browser_list">
      <li>
        <a href="http://windows.microsoft.com/en-us/windows-vista/block-or-allow-cookies">Internet Explorer</a>
      </li>
      <li>
        <a href="https://support.google.com/chrome/answer/95647?hl=en">Google Chrome</a>
      </li>
      <li>
        <a href="https://support.mozilla.org/en-US/kb/enable-and-disable-cookies-website-preferences">Mozilla Firefox</a>
      </li>
      <li>
        <a href="http://support.apple.com/kb/PH11913">Safari (OSX Mountain Lion)</a>
      </li>
    </ul>
  </div>
</div>
<%= javascript_include_tag params[:controller] %>